                    android:gravity="center">

                    <View
                        android:layout_width="@dimen/background_scale_view_16"
                        android:layout_height="@dimen/background_scale_view_9"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_scale" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/background_scale_margin_top_text"
                    android:gravity="center_horizontal"
                    android:text="@string/scale169"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/scale_9_16"
                android:layout_width="@dimen/background_scale_layout_width"
