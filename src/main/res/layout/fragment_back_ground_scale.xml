<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.example.img_decorat.presentation.viewmodel.MainViewModel" />
    </data>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.fragment.background.BackGroundFragment">

        <LinearLayout
            android:id="@+id/background_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/scale_1_1"
                android:layout_width="@dimen/background_scale_layout_width"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:onClick="@{()->viewmodel.selectBackgroundScale(0)}"
                android:orientation="vertical"
                android:padding="@dimen/background_scale_padding_layout">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/background_scale_relative_layout_height"
                    android:gravity="center">

                    <View
                        android:layout_width="@dimen/background_scale_view_11_size"
                        android:layout_height="@dimen/background_scale_view_11_size"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_scale" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/background_scale_margin_top_text"
                    android:gravity="center_horizontal"
                    android:text="@string/scale11"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/scale_4_3"
                android:layout_width="@dimen/background_scale_layout_width"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:onClick="@{()->viewmodel.selectBackgroundScale(1)}"
                android:orientation="vertical"
                android:padding="@dimen/background_scale_padding_layout">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/background_scale_relative_layout_height"
                    android:gravity="center">

                    <View
                        android:layout_width="@dimen/background_scale_view_4"
                        android:layout_height="@dimen/background_scale_view_3"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_scale" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/background_scale_margin_top_text"
                    android:gravity="center_horizontal"
                    android:text="@string/scale43"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/scale_3_4"
                android:layout_width="@dimen/background_scale_layout_width"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:onClick="@{()->viewmodel.selectBackgroundScale(2)}"
                android:orientation="vertical"
                android:padding="@dimen/background_scale_padding_layout">

                <RelativeLayout
                    android:layout_width="wrap_content"
