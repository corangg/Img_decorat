<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.example.img_decorat.viewmodel.MainViewModel" />
    </data>
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.MainActivity"
            android:orientation="vertical"
            android:background="#121212">
            <View
                android:id="@+id/outside_touch_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:onClick="@{()->viewmodel.closeMenu()}"/>

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/main_toolbar"
                app:menu="@menu/menu_title">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/title_edit"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:background="@null"
                        android:text= "@={viewmodel.imgTitle}" />
                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/menu_add"
                        android:layout_marginRight="12dp"
                        android:layout_toLeftOf="@+id/menu_more"
                        android:background="@drawable/ic_add"
                        android:backgroundTint="@color/white"
                        android:onClick="@{()->viewmodel.openGallery()}"/>
                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/menu_more"
                        android:layout_marginRight="12dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_more"
                        android:backgroundTint="@color/white"
                        android:onClick="@{()->viewmodel.moreMenu()}"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/line_toolbar"
                android:layout_below="@+id/main_toolbar"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/menu_view"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:background="#000000"
                android:layout_marginHorizontal="6dp"
                android:layout_below="@id/line_toolbar"
                android:visibility="gone">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/recycle_meun" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/bg_drawer_layout"
            android:id="@+id/main_drawer_view"
            android:orientation="vertical"
            android:layout_gravity="start" >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:id="@+id/recycle_layer" />
        </LinearLayout>
<!--        리사이클러뷰로 바꿔야함-->



    </androidx.drawerlayout.widget.DrawerLayout>


</layout>