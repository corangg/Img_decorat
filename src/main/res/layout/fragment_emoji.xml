<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.example.img_decorat.presentation.viewmodel.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/emoji_layout_height"
        tools:context=".ui.fragment.emoji.EmojiFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/emoji_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_view_top"
            android:paddingHorizontal="@dimen/emoji_padding_horizontal" />
    </LinearLayout>
</layout>